# Dockerfile.api
FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app
    
WORKDIR /wheels
COPY api/requirements.api.txt /wheels/requirements.txt
RUN pip install --no-cache-dir -r /wheels/requirements.txt

WORKDIR /app
COPY api/ /app/api/
COPY db/  /app/db/

EXPOSE 8000
CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8000"]
